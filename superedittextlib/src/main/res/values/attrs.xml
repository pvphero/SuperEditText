<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SuperEditText">
        <!-- The base color of the line and the texts. Default is black. -->
        <attr name="suet_baseColor" format="color" />
        <!-- The highlight color of the line, and the floating label if the highlightFloatingLabel is true. -->
        <attr name="suet_primaryColor" format="color" />
        <!-- How the floating label should be shown. Default is none -->
        <attr name="suet_floatingLabel">
            <enum name="none" value="0" />
            <enum name="normal" value="1" />
            <enum name="highlight" value="2" />
        </attr>
        <!-- The color for when something is wrong.(e.g. exceeding max characters) -->
        <attr name="suet_errorColor" format="color" />
        <!-- Min characters count limit. 0 means no limit. -->
        <attr name="suet_minCharacters" format="integer" />
        <!-- max Characters count limit. 0 means no limit. -->
        <attr name="suet_maxCharacters" format="integer" />
        <!-- Whether to show the bottom ellipsis in singleLine mode -->
        <attr name="suet_singleLineEllipsis" format="boolean" />
        <!-- Reserved bottom text lines count, no matter if there is some helper/error text. -->
        <attr name="suet_minBottomTextLines" format="integer" />
        <!-- Helper text at the bottom -->
        <attr name="suet_helperText" format="string" />
        <!-- Helper text color -->
        <attr name="suet_helperTextColor" format="color" />
        <!-- Font of the paint used to draw accent texts -->
        <attr name="suet_accentTypeface" format="string" />
        <!-- Font used on view -->
        <attr name="suet_typeface" format="string" />
        <!-- Custom float label text -->
        <attr name="suet_floatingLabelText" format="string" />
        <!-- spacing between the main text and the floating label -->
        <attr name="suet_floatingLabelPadding" format="dimension" />
        <!-- Hide underline -->
        <attr name="suet_hideUnderline" format="boolean" />
        <!-- Hide underline is dotted?-->
        <attr name="suet_isHideUnderlineDotted" format="boolean" />
        <!-- Underline's color -->
        <attr name="suet_underlineColor" format="color" />
        <!-- Auto validate -->
        <attr name="suet_autoValidate" format="boolean" />
        <!-- Clear button -->
        <attr name="suet_clearButton" format="boolean" />
        <!-- The floating label's text size. 12sp by default. -->
        <attr name="suet_floatingLabelTextSize" format="dimension" />
        <!-- The floating label's text color. -1 by default. -->
        <attr name="suet_floatingLabelTextColor" format="color" />
        <!-- The bottom texts' size. 12sp by default. -->
        <attr name="suet_bottomTextSize" format="dimension" />
        <!-- Always show the floating label, instead of animating it in/out. False by default. -->
        <attr name="suet_floatingLabelAlwaysShown" format="boolean" />
        <!-- Always show the helper text, no matter if the edit text is focused. False by default. -->
        <attr name="suet_helperTextAlwaysShown" format="boolean" />
        <!-- Whether use animation to show/hide the floating label. True by default. -->
        <attr name="suet_floatingLabelAnimating" format="boolean" />
        <!-- Text color -->
        <attr name="suet_textColor" format="color" />
        <!-- Hint Text Color -->
        <attr name="suet_textColorHint" format="color" />
        <!-- Auto validate on focus lost. False by default. -->
        <attr name="suet_validateOnFocusLost" format="boolean" />
        <!-- Whether check the characters count at the beginning it's shown. True by default. -->
        <attr name="suet_checkCharactersCountAtBeginning" format="boolean" />

        <attr name="suet_floatingLableTextAutoFontSizeLayoutAlign">
            <enum name="ALIGN_NORMAL" value="0" />
            <enum name="ALIGN_OPPOSITE" value="1" />
            <enum name="ALIGN_CENTER" value="2" />
        </attr>

        <attr name="suet_floatingLableTextAutoFontSizeSpaceMult" format="integer" />
        <attr name="suet_floatingLableTextAutoFontSizeSpaceAdd" format="integer" />
        <attr name="suet_floatingLableTextAutoFontSizeMaxLines" format="integer" />
        <attr name="suet_isAllowLongClickable" format="boolean" />
        <attr name="suet_isTextIsSelectable" format="boolean" />
        <attr name="suet_isSelectionActionMode" format="boolean" />
        <attr name="suet_isSafeInputText" format="boolean" />
        <attr name="suet_innerPaddingTop" format="integer" />

    </declare-styleable>
</resources>